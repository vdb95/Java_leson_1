import java.util.Scanner;

public class Cat {
    private int appetite;
    private String name;

    public Cat(int appetite, String name) {
        this.appetite = appetite;
        this.name = name;
    }

    public int getAppetite() {
        return appetite;
    }

    public void setAppetite(int appetite) {
        this.appetite = appetite;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public void eat(Plate p) {
        p.decreaseFood(appetite);
    }
}

class Plate {
    private int food;
    Scanner sc = new Scanner(System.in);

    public Plate(int food) {
        this.food = food;
    }

    public void decreaseFood(int n) {
        food -= n;
    }

    public int getFood() {
        return food;
    }

    public void setFood(int food) {
        this.food = food;
    }

    public void info() {
        System.out.println(food);

    }
    public void addFood(){
        int e;
        System.out.println("Недостаточно еды. Добавить?");
        e = sc.nextInt();
        this.food = food + e;
    }
}


class MainClass {
    public static void main(String[] args) {

       Cat[] catsArr = new Cat[4];
        Plate plate = new Plate(100);
        catsArr[0]= new Cat(20, "Barsik");
        catsArr[1]= new Cat(15,"Vaska");
        catsArr[2]= new Cat(145,"Cocos");
        catsArr[3]= new Cat(18, "Bolt");

        System.out.println("В тарелке:");
        plate.info();

        for (int i = 0; i <catsArr.length ; i++) {
            if(catsArr[i].getAppetite() > plate.getFood()){
                plate.addFood();
            }
            System.out.println("Остаток в тарелке:");
            catsArr[i].eat(plate);
            plate.info();
        }
    }
   }
