import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        guesTheNomber();

    }
    static void guesTheNomber(){
        Scanner sc = new Scanner(System.in);// вводим число на консоль
        System.out.println("Введите число от 0 до 9:");
        int a = sc.nextInt();
        System.out.println(a);
        Random random = new Random();
        int x = random.nextInt(10);
        int n = x;

        for (int i = 1; i <= 3 ; i++) {
            System.out.println("Чиcло равно:" + n);
            if (n == a) {
                System.out.println("Вы угодали");
            } else if (n < a){
                System.out.println("Загаданое число меньше.");
            }else if (n > a){
                System.out.println("Загаданое число больше.");
            }
            System.out.println("Повторить игру еще раз? 1 – да / 0 – нет");
            Scanner scan = new Scanner(System.in);// вводим число на консоль
            int p = scan.nextInt();
            System.out.println("выы ответили"+p);
            if(p == 0) break;

        }


    }
}
